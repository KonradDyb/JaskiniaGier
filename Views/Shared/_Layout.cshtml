<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JaskiniaGier</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />


    @*<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">*@

</head>
<body>
    <div class="menu-bar">
        <ul>
            <li><i class="fa fa-dungeon"></i><a asp-controller="Home" asp-action="Index">JaskiniaGier</a></li>
            <li><i class="fa fa-home"></i><a asp-controller="Home" asp-action="Index">Home</a></li>

            <li>
                <a asp-controller="Game" asp-action="ListAllGames"><i class="fa fa-gamepad"></i>Gry</a>

                <div class="sub-menu-1">
                    <ul>
                        <li class="hover-me">

                            <a asp-controller="Game" asp-action="ListByGenre" asp-route-genre="Strategiczne">Strategiczne</a><i class="fa fa-angle-right"></i>
                            <div class="sub-menu-2">
                                <ul>
                                    <li><a asp-controller="Game" asp-action="ListBySubGenre" asp-route-subGenre="Ekonomiczne">Ekonomiczne</a></li>
                                    <li><a asp-controller="Game" asp-action="ListBySubGenre" asp-route-subGenre="RTS">RTS</a></li>
                                    <li><a asp-controller="Game" asp-action="ListBySubGenre" asp-route-subGenre="Taktyczne">Taktyczne</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="hover-me">
                            <a asp-controller="Game" asp-action="ListByGenre" asp-route-genre="Fabularne">Fabularne</a><i class="fa fa-angle-right"></i>

                            <div class="sub-menu-2">
                                <ul>
                                    <li><a asp-controller="Game" asp-action="ListBySubGenre" asp-route-subGenre="Hack & Slash">Hack & Slash</a></li>
                                    <li><a asp-controller="Game" asp-action="ListBySubGenre" asp-route-subGenre="MMORPG">MMORPG</a></li>
                                </ul>
                            </div>
                        </li>
                        <li><a asp-controller="Game" asp-action="ListByGenre" asp-route-genre="Symulacyjne">Symulacyjne</a></li>
                    </ul>
                </div>
            </li>
            <partial name="_LoginPartial" />
            <li>
                <a asp-controller="Order" asp-action="GetOrders"><i class="fa fa-user"></i>Zamówienia</a>
            </li>
        </ul>
    </div>
    <div class="container" style="padding-top: 160px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="https://kit.fontawesome.com/b3ae133f06.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

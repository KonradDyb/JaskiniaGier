@model Game

<link rel="stylesheet" href="~/css/productdetails.css">


<div class="container">
    <div class="row">
        <div class="col-md-5">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/carousel/@Model.ImagePath.Insert(0, "carousel1_")" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/carousel/@Model.ImagePath.Insert(0, "carousel2_")"  alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/carousel/@Model.ImagePath.Insert(0, "carousel3_")" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/@Model.ImagePath" alt="...">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-7">
            <pc class="newarrival text-center">BESTSELLER </pc>
            <h2>@Model.Title</h2>
            <p class="price">@Model.Price</p>
            <p><b>Opis Gry: </b>@Model.GameDescription</p>
            <p><b>Źródło opisu:</b> <a href="https://www.gry-online.pl/">www.gryonline.pl</a></p>
            <p><b>Platforma: </b>PC</p>
            <label>Ilość: </label>
            <input type="text" value="1">
            <button type="button" class="btn btn-primary cart"> KUP</button>







        </div>
    </div>
</div>